" Use OS X system clipboard.
set clipboard=unnamed " Use OS X system clipboard.

" Remove delay after pressing escape key.
set noesckeys

" Don't generate backup or swap files.
set nobackup
set nowritebackup
set noswapfile

" Add line numbers.
set number
set numberwidth=5

" Don't fold Markdown.
let g:vim_markdown_folding_disabled=1
