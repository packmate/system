# Unix
alias mkdir='mkdir -p'
alias l='ls'
alias ll='ls -al'

# Navigation
alias dev='cd ~/Development'
alias dotfiles='cd ~/Development/dotfiles'
alias tendfire='cd ~/Development/tendfire'
alias pn='cd ~/Development/pollinate'
alias pna='cd ~/Development/pollinate/pollinate-api'
alias pnn='cd ~/Development/pollinate/pollinate-native'
alias kp='cd ~/Development/kp'

# JS/Node Development
alias cowboy="npm run cowboy"
alias develop="npm run develop"
alias wd='selenium-server -p 4444'

# Cordova Development
alias unreloader="(cd ./native; cordova plugins rm pro.fing.cordova.gapreload)"
alias reloader="(cd ./native; cordova plugins add pro.fing.cordova.gapreload)"

# Databases
alias pgstart='postgres -D /usr/local/var/postgres'
alias mongo='mongod --config /usr/local/etc/mongod.conf'

# iOS
alias ios='open /Applications/Xcode.app/Contents/Developer/Applications/iOS\ Simulator.app'

# Git - Checkouts
alias gc='git checkout'
alias gb='git checkout -b'

# Git - Staging
alias ga='git add -A'

# Git - Diffs
alias gd='git diff'
alias gdc='git diff --cached'

# Git - Committing
alias gcm='git commit --allow-empty -m' # Allow inputting a message after the alias.
alias gam='git commit --amend -Chead'   # Amend with most recent commit's message.
alias snap='git add -A . && git commit -m "Snapshot"'

# Git - Logs
alias gl='git log --pretty=oneline --abbrev-commit --graph --decorate'

# Git - Gravy
# `g` does `git status` when not given a command.
function g {
  if [[ $# > 0 ]]; then
    git $@
  else
    git status -sb
  fi
}

# Rails
alias be='bundle exec'
alias dbmp='bundle exec rake db:migrate && bundle exec rake db:test:prepare'
alias rs='bundle exec rspec --color'
