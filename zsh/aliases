# Unix
alias mkdir='mkdir -p'
alias l='ls'
alias ll='ls -al'

# Navigation
alias dev='cd ~/Development'
alias dotfiles='cd ~/Development/dotfiles'

# Navigation - Tend
alias tend='cd ~/Development/tend'

# Navigation - Pollinate
alias pollinate3='mux pollinate'
alias pollinate4='mux pollinate4'

alias pn4='cd ~/Development/pollinate-v4'
alias pna='cd ~/Development/pollinate-api'
alias pnu='cd ~/Development/pollinate-ui-v3'

# Ruby/Rails
alias b='bundle'
alias be='bundle exec'
alias dbmp='bundle exec rails db:migrate db:test:prepare'

# Databases
alias pgstart='postgres -D /usr/local/var/postgres'
alias mongo='mongod --config /usr/local/etc/mongod.conf'

# iOS
alias ios='open -n /Applications/Xcode.app/Contents/Developer/Applications/iOS\ Simulator.app'
alias xios='open -n /Applications/Xcode.app/Contents/Developer/Applications/iOS\ Simulator.app --args -CurrentDeviceUDID AD0E1C1B-8EE4-423A-BA7C-781BC6A47113 & open -n /Applications/Xcode.app/Contents/Developer/Applications/iOS\ Simulator.app --args -CurrentDeviceUDID 94DEA1D3-316F-440C-9A07-925A0AAEAFFD & open -n /Applications/Xcode.app/Contents/Developer/Applications/iOS\ Simulator.app --args -CurrentDeviceUDID 1123B692-FAF6-46AC-BE22-DA920CFE9534 & open -n /Applications/Xcode.app/Contents/Developer/Applications/iOS\ Simulator.app --args -CurrentDeviceUDID 7E04F577-8DA2-4ACB-8917-60E788E62252'

# Git - Checkouts
alias gc='git checkout'
alias gb='git checkout -b'

# Git - Staging
alias ga='git add -A'

# Git - Diffs
alias gd='git diff'
alias gdc='git diff --cached'

# Git - Committing
alias gcm='git commit --allow-empty -m' # Allow inputting a message after the alias.
alias gam='git commit --amend -Chead'   # Amend with most recent commit's message.
alias todo='git add TODO.md && git commit -m "[Doc] Update TODO."'
alias readme='git add README.md && git commit -m "[Doc] Update README."'

# Git - Deploying
alias gp='git push'

# Git - Logs
alias gl='git log --pretty=oneline --abbrev-commit --graph --decorate'

# Git - Gravy
# `g` does `git status` when not given a command.
function g {
  if [[ $# > 0 ]]; then
    git $@
  else
    git status -sb
  fi
}
