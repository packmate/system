# Unix
alias mkdir='mkdir -p'
alias l='ls'
alias ll='ls -al'

# Navigation
alias dev='cd ~/Development'
alias dotfiles='cd ~/Development/dotfiles'

# Navigation - Pollinate
alias pollinate='mux pollinate'

alias pn='cd ~/Development/pollinate'
alias pna='cd ~/Development/pollinate/api'
alias pnc='cd ~/Development/pollinate/ui/common'
alias pne='cd ~/Development/pollinate/ui/enroll'
alias pnn='cd ~/Development/pollinate/ui/practice/native'
alias pnp='cd ~/Development/pollinate/ui/practice'
alias pnpr='cd ~/Development/pollinate/ui/provide'
alias pnu='cd ~/Development/pollinate/ui'

# Deployment
alias stage='gulp build --web --staging && gulp deploy --web --staging'
alias release='gulp build --web --production && gulp deploy --web --production'

# JS/Node Development
alias wd='webdriver-manager start'

# Cordova Development
alias unreloader="(cd ./native; cordova plugins rm pro.fing.cordova.gapreload)"
alias reloader="(cd ./native; cordova plugins add pro.fing.cordova.gapreload)"

# Ruby/Rails
alias b='bundle'
alias be='bundle exec'

# Databases
alias pgstart='postgres -D /usr/local/var/postgres'
alias mongo='mongod --config /usr/local/etc/mongod.conf'

# iOS
alias ios='open -n /Applications/Xcode.app/Contents/Developer/Applications/iOS\ Simulator.app'

# Git - Checkouts
alias gc='git checkout'
alias gb='git checkout -b'

# Git - Staging
alias ga='git add -A'

# Git - Diffs
alias gd='git diff'
alias gdc='git diff --cached'

# Git - Committing
alias gcm='git commit --allow-empty -m' # Allow inputting a message after the alias.
alias gam='git commit --amend -Chead'   # Amend with most recent commit's message.
alias todo='git add TODO.md && git commit -m "Update TODO."'
alias readme='git add README.md && git commit -m "Update README."'

# Git - Deploying
alias gp='git push'

# Git - Logs
alias gl='git log --pretty=oneline --abbrev-commit --graph --decorate'

# Git - Gravy
# `g` does `git status` when not given a command.
function g {
  if [[ $# > 0 ]]; then
    git $@
  else
    git status -sb
  fi
}
